{
    "name": "moviebytes",
    "version": "1.0.0",
    "description": "platform for users to create, share and review movies",
    "main": "server.js",
    "scripts": {
        "start": "\"npm run client\"",
        "server": "cd server && nodemon index.js",
        "client": "cd client && npm start",
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "heroku-postbuild": "npm run install-client && npm run build",
        "build": "cd client && npm run build",
        "install-client": "cd client && npm install"

    },
    "author": "Anteneh Moges",
    "license": "MIT",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "config": "^3.2.4",
        "express": "^4.17.1",
        "express-validator": "^6.3.0",
        "jsonwebtoken": "^8.5.1",
        "request": "^2.88.0"
    },
    "devDependencies": {
        "concurrently": "^5.0.2",
        "nodemon": "^2.0.2"
    }
}
